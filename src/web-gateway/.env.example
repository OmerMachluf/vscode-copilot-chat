# VS Code Copilot Web Gateway Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration (REQUIRED in production)
JWT_SECRET=your-secure-secret-here
JWT_EXPIRES_IN=24h

# Extension API URL (the VS Code extension's HTTP API)
EXTENSION_API_URL=http://localhost:3001

# CORS Configuration
# Comma-separated list of allowed origins (leave empty for same-origin only)
CORS_ORIGINS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
ENABLE_LOGGING=true
